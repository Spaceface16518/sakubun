<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Sakubun lets you improve your kanji skills by giving you practice specifically with the kanji you've already learned">
    <title>Sakubun</title>
    <link rel="stylesheet" href="/styles/main.css">
    {% block head %}{% endblock head %}
    <script data-host="https://microanalytics.io" data-dnt="false" src="https://microanalytics.io/js/script.js" id="ZwSg9rf6GA" async defer></script>
</head>
<body {% if theme != "system" %}class="{{ theme }}"{% endif %}>
    <header role="banner">
        <a href="/">作文</a>
        <div aria-label="theme selector">
            <button id="dark" title="dark theme" aria-label="dark theme" {% if theme == "dark" %}class="active"{% endif %}>
                <span class="material-icons">dark_mode</span>
            </button>
            <button id="light" title="light theme" aria-label="light theme" {% if theme == "light" %}class="active"{% endif %}>
                <span class="material-icons">light_mode</span>
            </button>
            <button id="system" title="system theme" aria-label="system theme" {% if theme == "system" %}class="active"{% endif %}>
                <span class="material-icons">settings_brightness</span>
            </button>
        </div>
    </header>
    <nav>
        <a {% if page == "custom_text" %}class="active"{% endif %} href="/custom_text">
            Custom Text
        </a>
        <a {% if page == "known_kanji" %}class="active"{% endif %} href="/known_kanji">
            Known Kanji
        </a>
        <a {% if page == "quiz" %}class="active"{% endif %} href="/quiz">
            Quiz
        </a>
    </nav>
    {% block content %}{% endblock content %}
</body>
<script src="/scripts/jquery-3.5.1.min.js"></script>
<script>
    function reorder_theme_icons() {
        $("header div").append($("#system"))
            .append($("#dark"))
            .append($("#light"))
            .append($("header button.active"));
    }

    reorder_theme_icons();

    $("header button").click(function() {
        if ($(this).parent().hasClass("open")) {
            $("header button").removeClass("active");
            $(this).addClass("active");
            if (this.id === "system") {
                // Delete the cookie
                document.cookie = "theme=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
                $("body").attr("class", "");
            } else {
                document.cookie = "theme=" + this.id + "; SameSite=Lax;";
                $("body").attr("class", this.id);
            }
            $(this).parent().append($(this));
        } else {
            reorder_theme_icons();
        }
        $(this).parent().toggleClass("open");
    });
</script>
{% block javascript %}{% endblock javascript %}
</html>
